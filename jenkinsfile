pipeline
{
    agent any
    stages
    {
        stage('Continuous Download')
        {
            steps
            {
                script
                {
                    try
                    {
                        git 'https://github.com/intelliqittrainings/maven.git'
                    }
                    catch(Exception e1)
                    {
                        exit(1)
                    }
                }
            }
        }
        stage('Continuous Build')
        {
            steps
            {
                script
                {
                    try
                    {
                        sh 'mvn package'
                    }
                    catch(Exception e2)
                    {
                        exit(1)
                    }
                }
            }
        }
        stage('continuous Deployment')
        {
            steps
            {
                script
                {
                    try
                    {
                        deploy adapters: [tomcat9(credentialsId: '09b33fb2-454e-4dd0-87de-b37a309c35b5', path: '', url: 'http://172.31.93.159:8080')], contextPath: 'try1', war: '**/*.war'
                    }
                    catch(Exception e3)
                    {
                        print(e3)
                        exit(1)
                    }
                }
            }
        }
        stage('Continuous Testing')
        {
            steps
            {
                script
                {
                    try
                    {
                        git 'https://github.com/intelliqittrainings/FunctionalTesting.git'
                        sh 'java -jar /var/lib/jenkins/workspace/TRYCATCH/testing.jar'
                    }
                    catch(Exception e4)
                    {
                        prtint(e4)
                        exit(1)
                    }
                }
            }
        }
        stage('Continuous Delievery')
        {
            steps
            {
                script
                {
                    try
                    {
                        deploy adapters: [tomcat9(credentialsId: '09b33fb2-454e-4dd0-87de-b37a309c35b5', path: '', url: 'http://172.31.93.199:8080')], contextPath: 'm1', war: '**/*.war'
                    }
                    catch(Exception e5)
                    {
                        print(e5)
                        exit(1)
                    }
                }
            }
        }
        
    }
}
